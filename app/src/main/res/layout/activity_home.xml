<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="10dp"
    android:foregroundTint="#524343"
    android:gravity="center"
    android:orientation="vertical"
    android:outlineProvider="bounds">

    <!-- App Logo -->

    <!-- Welcome Message -->

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="374dp"
        android:layout_height="226dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:contentDescription="App Logo"
        android:src="@drawable/app_logo" />

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Welcome, User!"
        android:textColor="#421212"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Catchy Tagline -->
    <TextView
        android:id="@+id/catchy_tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Ready to ride? Book your journey now!"
        android:textColor="#3BA69D"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Pickup Location Input -->

    <!-- Drop-off Location Input -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/PlainText1"
            android:layout_width="105dp"
            android:layout_height="54dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/abyssinica_sil"
            android:inputType="text"
            android:text="From"
            android:textAlignment="center"
            android:textColor="#7C7979"
            android:textSize="18sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/from_location"
            android:layout_width="295dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/editbox_background_normal"
            android:fontFamily="@font/abyssinica_sil"
            android:hint="(Pickup Location)"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#1E544E"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Book Ride Button -->

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/PlainText2"
            android:layout_width="100dp"
            android:layout_height="53dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/abyssinica_sil"
            android:inputType="text"
            android:text="To "
            android:textAlignment="center"
            android:textColor="#7C7979"
            android:textSize="18sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/to_location"
            android:layout_width="294dp"
            android:layout_height="55dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/editbox_background_normal"
            android:fontFamily="@font/abyssinica_sil"
            android:hint="(Drop Location)"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#1E544E"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/book_ride_button"
        style="?android:attr/buttonStyle"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#3D9040"
        android:text="Book Ride"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>
