<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/driver_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/purple_purse"
        android:paddingBottom="16dp"
        android:text="Your Driver Details"
        android:textColor="#9D6109"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <ImageView
        android:id="@+id/driver_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/moto"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/londrina_solid_light"
        android:paddingBottom="8dp"
        android:text="Driver: John Doe"
        android:textColor="#5D3904"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/driver_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/londrina_solid_light"
        android:paddingBottom="8dp"
        android:text="Vehicle: Honda City (Cab)"
        android:textColor="#5D3904"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/driver_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/londrina_solid_light"
        android:paddingBottom="16dp"
        android:text="Contact: +91 9876543210"
        android:textColor="#5D3904"
        android:textSize="20sp" />

    <!-- Rides Attended -->
    <TextView
        android:id="@+id/driver_rides_attended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/londrina_solid_light"
        android:paddingBottom="16dp"
        android:text="Rides Attended: 250"
        android:textColor="#5D3904"
        android:textSize="20sp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <!-- Rating System -->
    <LinearLayout
        android:id="@+id/rating_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center">

        <TextView
            android:id="@+id/rate_driver_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/purple_purse"
            android:text="Rate Your Driver"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:paddingBottom="8dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <RatingBar
            android:id="@+id/driver_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="0"
            android:layout_marginBottom="16dp"
            />

        <Button
            android:id="@+id/submit_rating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Rating"
            android:backgroundTint="#009688"
            android:fontFamily="@font/aclonica"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/end_ride_button"
        android:layout_width="107dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:fontFamily="@font/aclonica"
        android:text="End Ride"
        android:textColor="@android:color/white" />
</LinearLayout>